[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    electron,
    web,
    .venv,
    .mypy_cache,
    # Exclude any virtual environment directories
    venv,
    env,
    .env,
    # Exclude GitHub Actions and other CI directories
    .github,
    # Exclude common virtual env names
    *_env,
    test_env,
    fresh_env
per-file-ignores = 
    __init__.py:F401
